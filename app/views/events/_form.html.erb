<div id="new_gift_error>">
  <% if @event %>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h3>
          <%= pluralize(@event.errors.count, "error") %>
          prohibited this post from being saved:
        </h3>
        <ul>
        <% @event.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>

<%= form_for event do |f| %>
  <%= f.text_area :name, size: "900%x900%" %><br><br>
  <%= f.label :date %><br>
  <%= f.date_field :date %><br><br>
  <%= f.submit 'Submit' %><br><br>
<% end %>
